<%- include("header") -%>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <a href="http://localhost:3000/Todolists"><img class="w-100 img-fluid" src="/images/toDoList.jpg"
                        class="object-fit-sm-contain" alt="First slide"> </a>
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="blueColor">Costumize your stylish To Do Lists</h5>
                    <p class="blueColor">Use the ready template or start from scratch!</p>
                </div>
            </div>
            <div class="carousel-item">
                <a href="http://localhost:3000/Meteorology"><img class="w-100 img-fluid" src="/images/weather.jpg"
                        class="object-fit-sm-contain" alt="Second slide"> </a>
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="yellowColor">Going for a trip?</h5>
                    <p class="yellowColor">First check the weather!</p>
                </div>
            </div>
            <div class="carousel-item">
                <a href="http://localhost:3000/Travel%20Plans"><img class="w-100 img-fluid" src="/images/trip.jpg"
                        class="object-fit-sm-contain" alt="Third slide"> </a>
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="yellowColor">Pick your place</h5>
                    <p class="yellowColor">AND You are ALL SET!</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


